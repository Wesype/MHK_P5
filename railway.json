{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "/app/.venv/bin/playwright install chromium && /app/.venv/bin/playwright install-deps chromium && /app/.venv/bin/python db_postgres.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
